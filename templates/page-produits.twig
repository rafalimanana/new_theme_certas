                        {% for page in produits.pagination.pages %}
                                {% if page.link %}
                                    <a href="{{page.link}}" class="page-numbers {{page.class}}">{{page.title}}</a>
                                {% else %}
                                    <span class="page-numbers {{page.class}}">{{page.title}}</span>
                                {% endif %}
                        {% endfor %}
                        {% if produits.pagination.next %}
                            <a href="{{produits.pagination.next.link}}" class="page-numbers next {{produits.pagination.next.link|length ? '' : 'invisible'}}">Suivant</a>
