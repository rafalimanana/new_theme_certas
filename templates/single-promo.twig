                                                <img src="{{term.thumbnail.src}}" class="_actu_img">
                                            </div>
                                            <div class="panel-footer">
                                                <h4 class="_actu_date">{{term.date}}</h4>
                                                <h2 class="_actu_title">{{term.title}}</h2>
                                                <p class="_actu_description">
                                                    {{ term.title|striptags|length > 10 ? term.post_content|excerpt(12) : term.post_content|excerpt(20) }}
                                                </p>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </section>
                {% endif %} #}
            </article>
        </div>
	</div><!-- /content-wrapper -->
    <div class="content-wrapper">
        <div class="container pt-5 pb-5 " id="_nos_actus">
            {% if promos is not empty %}
                <h1 class="_title_actus font-family-pers">
                    <span class="fw-l">Nos </span> <b>Promotions en cours</b> 
                </h1>
                <div class="slick_responsive row promospage" id="slick_article">
                    {% for promo in promos %}
                        {% if not promo.promotion_expire %}
                            <div class="col-md-3 _cnt_panel_actus">
                                <div class="panel _panel_actus" style="min-height: 100% !important;">
                                    <a href="{{promo.link}}">
                                        <div class="panel-body">
                                            <img src="{{promo.thumbnail.src}}" class="_actu_img">
                                        </div>
                                        <div class="panel-promo">
                                            <h4 class="_actu_date">{{promo.date}}</h4>
                                            <h2 class="_actu_title">{{promo.title}}</h2>
                                            <p class="_actu_description">
                                                {# {{ promo.title|striptags|length > 10 ? promo.post_content|excerpt(12) : promo.post_content|excerpt(20) }} #}
                                                {{promo.post_content|excerpt(13)}}
                                            </p>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
