{% extends "_base_page.twig" %}
{% block header %}
{% endblock %}
{% block content %}

<div class="wrapper _bg_white {{sidebar_class}}" id="_pg_actualites">
    <!-- Aide à la navigation -->
    <div class="content-wrapper ">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb _bredcrumb_custo">
                    <li class="breadcrumb-item"><a href="{{site.url}}">Accueil</a></li>
                    <li class="breadcrumb-item"><a class="a-navig" href="{{ site.link }}/nos-promos">Nos promos</a></li>
                    <li class="breadcrumb-item active">{{post.title}}</li>
                </ol>
            </nav>
        </div>
    </div>
    <!-- Aide à la navigation -->
	<div class="content-wrapper">
        <div class="container">
            <article class="post-type-{{ post.post_type }} _pd_bt_25 row" id="post-{{ post.ID }}">
                <section class="_article_content col-md-12">
                    <div class="row">
                        <div class="col-md-5"  {% if post.promotion_expire %}style="opacity: 0.78;"{% endif %}>
                            <img src="{{ post.thumbnail.src }}" width="100%">
                        </div>
                        <div class="col-md-7">
                            <section class="article-content">
                                <h1 class="article-h1 t_promos"  {% if post.promotion_expire %}style="opacity: 0.78;"{% endif %}>{{ post.title }}</h1>
                                {# <a href="{{ post.link }}">{{ _e('edit') }}</a>
                                <p class="blog-author">
                                    <span>By </span><a href="{{post.author.path}}"> {{ post.author.name }} </a><span>&bull;</span> {{ post.date }}
                                </p> #}
                                <div class="article-body"  {% if post.promotion_expire %}style="opacity: 0.78;"{% endif %}>
                                    {{post.content}}
                                </div>
                               <div class="text-center">         
                                  <a href="{{ site.link }}/nos-promos">
                                    <button id="p_retour" class="{# btn-primary btn #} btn btn-secondary btn-first"> 
                                      <i class="fa fa-arrow-left"></i>
                                      Retour
                                    </button>
                                  </a>
                               </div>
                            </section>

                        </div>
                    </div>
                </section>
                {# {% if posts is not empty %}
                    <section class="_article_content col-md-12 mt-5" id="nos_promo_l">
                        <h1 class="_title_promos font-family-pers">
                            <span class="fw-l">Nos </span> <b>Actualités</b> 
                        </h1>
                        <div class="row">
