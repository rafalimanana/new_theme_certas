{% extends "_base_page.twig" %}
{% block header %}
{% endblock %}
{% block content %}

<div class="wrapper {{sidebar_class}}" id="_pg_lavage">
	<!-- Aide à la navigation -->
	<div class="content-wrapper _bg_white">
	    <div class="container">
	    	<nav aria-label="breadcrumb">
				<ol class="breadcrumb _bredcrumb_custo">
			    	<li class="breadcrumb-item"><a class="a-navig" href="{{ site.url }}">Accueil</a></li>
                    {% if post.parent.parent.title %}
                        <li class="breadcrumb-item"><a class="a-navig" href="{{ post.parent.parent.link }}">{{post.parent.parent.title}}</a></li>
                    {% endif %}
                    {% if post.parent.title %}
                        <li class="breadcrumb-item"><a class="a-navig" href="{{post.parent.link}}">{{post.parent.title}}</a></li>
                    {% endif %}
			    	<li class="breadcrumb-item active"><strong>{{post.title}} (les équipements)</strong> </li>
			  	</ol>
			</nav>
	    </div>
	</div>
	<!-- Aide à la navigation -->

	<div class="content-wrapper _bg_white">
	    <div class="container">
	        <article class="post-type-{{post.post_type}} _pd_bt_25 row" id="post-{{post.ID}}">
	            <section class="_article_content col-md-6">
                    {% if  post.get_field('premier_titre') %}
                       	<h2 class="text-uppercase  services-h2">
                            {{post.get_field('premier_titre')}}
                    	</h2>
                    {% endif %}

                    {% if  post.get_field('contenu') %}
		                <div class="_article_body">
	                            {{post.get_field('contenu')}}
		                </div>
                    {% endif %}
	            </section>

	            <section class="_article_content col-md-6 _blc_img_auto">
                    {% if  post.get_field('video_ou_image') %}
                        {# <img src="{{post.get_field('image').url}}" class="_img_auto"> #}
                        {{post.get_field('video_ou_image')}}
                    {% endif %}
	            </section>

	        </article>
	    </div>
	</div><!-- /content-wrapper -->

	<div class="content-wrapper _quest">
		<div class="_pd_bt_50 _pd_tp_50 _quest_shadow">
		    <div class="container">
		    	<div class="row">
		    		<div class="col-md-12">
                        <h2 class="text-uppercase  text-center services-h2">
                        	{% if post.get_field('texte_une_question') %}
                        		<span class="font-family-pers" style="color: #ffffff;">
                        			{{post.get_field('texte_une_question')|replace({'<p>': '', '</p>': ''})|raw}}
                        		</span>
                        	{% else %}
                            	<p>
	                            	<span class="font-family-pers" style="color: #ffffff;">
	                            		<span class="fw-l">une  </span><strong>question </strong>
	                            	</span>
                            	</p>
                        	{% endif %}
                        </h2>
		    		</div>
		    		<div class="col-md-12 _cnt_btn_quest">
		    			<a href="{{site.url}}/contact" class="_btn_quest">
		    				{% if post.get_field('texte_contactez_nous') %}
		    					{{post.get_field('texte_contactez_nous')}}
		    				{% else %}
		    					contactez-nous
		    				{% endif %}
		    			</a>
		    		</div>
		    	</div>
		    </div>
		</div>
	</div><!-- /content-wrapper -->
</div>

{% endblock %} 