    <div class="container _bg_white pt-5 pb-5" id="_nos_actus">
        {# {% filter shortcodes|raw %}
    		[recent_post_carousel slides_to_show="3" slides_to_scroll="1"]
        {% endfilter %} #}
        <h1 class="_title_actus font-family-pers"><span class="fw-l">
            {% if post.get_field('titre_nos_actualites') %}
                {{post.get_field('titre_nos_actualites')}}
            {% endif %}  
        </h1>
        <div class="slick_responsive row" id="slick_article">
        	{% if posts is not empty %}
        		{% for term in posts %}
		            <div class="col-md-3 _cnt_panel_actus">
		                <div class="panel _panel_actus">
                            <a href="{{term.link}}">
                                <div class="panel-body">
                                    <img src="{{term.thumbnail.src}}" class="_actu_img">
                                </div>
                                <div class="panel-footer">
                                    <h4 class="_actu_date">{{term.date}}</h4>
                                    <h2 class="_actu_title">
                                        {{ term.title|length > 70 ? term.title|slice(0, 70) ~ ' …' : term.title }}
                                    </h2>
                                    <p class="_actu_description">{{term.post_content|excerpt(13)}}</p>
                                </div>
                            </a>
		                </div>
		            </div>
                 {% endfor %}
        	{% endif %}
        </div>
    </div>
</div>
