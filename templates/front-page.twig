{% extends "_base_page.twig" %}
{% block header %}
{% endblock %}
{% block content %}
<div class="wrapper {{sidebar_class}}">
    <div class="container _bg_white _pd_tp_40 _pd_bt_40" id="_reseau">
         <!--Corona-->
    <style type="text/css">
        .popup{
            position: absolute;
            top: 17%;
            left: 0;
            width: 100%;
            z-index: 10;
            background-color: transparent;
            
            height: 70vh;
           
        }

        .italic{
            font-style: italic;
        }
        .bg-white{
            background-color: #ffffff;
        }

        .close{
            position: absolute;
            top:20px;
            right:100px;
        }

        .container-corona{
                 padding: 50px;
            border: 3px solid #4e2490;
        }

        .bouton-corona{
             z-index: 9999;
            background: #4f2f8d;
         border: #4f2f8d solid 1px;
      
    color: #fff;
    cursor: pointer;
    
    border-radius: 20px;
    color: #fff;
    padding: 6px 18px;
    margin: 0 5px;
    text-transform: uppercase;
        font-weight: normal;
    font-size: 14px;
    transition: 0.5s all ease;

        }

        .bouton-corona:hover{
            background: #02b5ca;
            border: #02b5ca solid 1px;
        }


            .titre-corona{
                font-weight: bold;
                color: #4f2f8d;
            }


    </style>
      <script type="text/javascript">
    function close(){
        document.getElementById("popup").style.display = "none";
            }
       
    </script>
   
    <!-- end of corona -->
        <h1 class="_title_reseau font-family-pers"><span class="fw-l">
        {% if post.get_field('titre_notre_reseau') %}
            {{post.get_field('titre_notre_reseau')}}
        {% endif %} 
        </h1>
        <div class="row _cnt_bloc">
            <div class="col-md-4 mb-4">
                {% set ex_url = post.get_field('lien_reseau_express') %}
                <a href="{% if ex_url.url %}{{ex_url.url}}{% else %}#{% endif %}">
                    <div class="_bloc">
                        <div class="_bloc_ico">
                                <img src="{{ site.theme.link }}/images/_icons/_pg_home/_express.png" class="nr-reseau">
                                <img src="{{ site.theme.link }}/images/_icons/_pg_home/__express.png" class="nr-reseau-hover">
                        </div>
                        <div class="_bloc_info">
                            <h3 class="_bloc_title">
                                {% if post.get_field('reseau_express') %}
                                	{{ post.get_field('reseau_express') }}
                                {% endif %}
                            </h3>
                            <p class="_bloc_desc">
                                {% if post.get_field('description_express') %}
                                	{{ post.get_field('description_express') }}
                                {% endif %}
                            </p>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-4 mb-4">
                {% set at_url = post.get_field('lien_reseau_autoroute') %}
                <a href="{% if at_url.url %}{{at_url.url}}{% else %}#{% endif %}">
                    <div class="_bloc">
                        <div class="_bloc_ico">
                                <img src="{{ site.theme.link }}/images/_icons/_pg_home/_road.png" class="nr-reseau">
                                <img src="{{ site.theme.link }}/images/_icons/_pg_home/__road.png" class="nr-reseau-hover">
                        </div>
                        <div class="_bloc_info">
                            <h3 class="_bloc_title">
                                {% if post.get_field('reseau_autoroute') %}
                                	{{ post.get_field('reseau_autoroute') }}
                                {% endif %}
                            </h3>
                            <p class="_bloc_desc">
                                {% if post.get_field('description_autoroute') %}
                                	{{ post.get_field('description_autoroute') }}
                                {% endif %}
                            </p>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-4 mb-4">
                {% set a_url = post.get_field('lien_reseau_acheteurs') %}
                <a href="{% if a_url.url %}{{a_url.url}}{% else %}#{% endif %}">
                    <div class="_bloc">
                        <div class="_bloc_ico">
                                <img src="{{ site.theme.link }}/images/_icons/_pg_home/_buyer.png" class="nr-reseau">
                                <img src="{{ site.theme.link }}/images/_icons/_pg_home/__buyer.png" class="nr-reseau-hover ">
                        </div>
                        <div class="_bloc_info">
                            <h3 class="_bloc_title">
                                {% if post.get_field('reseau_acheteurs') %}
                                    {{ post.get_field('reseau_acheteurs') }}
                                {% endif %}
                            </h3>
                            <p class="_bloc_desc">
                                {% if post.get_field('description_acheteurs') %}
                                    {{ post.get_field('description_acheteurs') }}
                                {% endif %}
                            </p>
                        </div>
                    </div>
                </a>
            </div>

        </div>

        <div class="col-md-12 _cnt_btn">
            {% set b_url = post.get_field('bouton_decouvrez_notre_reseau') %}
            <a href="{% if b_url.url %}{{b_url.url}}{% else %}#{% endif %}" class="_btn_lnk" target="{% if b_url.target %}{{b_url.target}}{% else %}_self{% endif %}">
                    {% if post.get_field('texte_bouton_decouvrez_notre_reseau') %}
                        {{post.get_field('texte_bouton_decouvrez_notre_reseau')}}
                    {% endif %}
            </a>
